{
  "name": "Mobile Auto Logout System",
  "short_name": "AutoLogout",
  "description": "Advanced mobile auto logout system with device state monitoring",
  "version": "1.0.0",
  "manifest_version": 2,
  
  "start_url": "mobile-auto-logout.html",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#198754",
  "background_color": "#ffffff",
  
  "icons": [
